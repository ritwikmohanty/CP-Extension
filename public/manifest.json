{
  "manifest_version": 3,
  "name": "CP Focus Mode",
  "version": "1.0.0",
  "description": "Focus on competitive programming by blocking distractions like AI, solutions, discussions, and editorials on coding platforms",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.leetcode.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*", "https://www.leetcode.com/*"],
      "js": ["content-scripts/leetcode.js"],
      "css": ["content-scripts/leetcode.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
